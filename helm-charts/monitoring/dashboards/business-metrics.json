{
  "title": "Business Metrics - Robot Shop",
  "tags": [
    "business",
    "revenue",
    "kpi"
  ],
  "panels": [
    {
      "id": 1,
      "title": "Revenue (Hourly)",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(order_revenue_total[1h])",
          "legendFormat": "Revenue/hour"
        }
      ],
      "yaxes": [
        {
          "format": "currencyUSD"
        }
      ]
    },
    {
      "id": 2,
      "title": "Orders per Minute",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(orders_total[1m]) * 60",
          "legendFormat": "Orders/min"
        }
      ]
    },
    {
      "id": 3,
      "title": "Conversion Funnel",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "rate(product_views_total[5m])",
          "legendFormat": "Product Views"
        },
        {
          "expr": "rate(cart_additions_total[5m])",
          "legendFormat": "Add to Cart"
        },
        {
          "expr": "rate(checkout_started_total[5m])",
          "legendFormat": "Checkout Started"
        },
        {
          "expr": "rate(orders_total[5m])",
          "legendFormat": "Orders Completed"
        }
      ]
    },
    {
      "id": 4,
      "title": "Cart Abandonment Rate",
      "type": "gauge",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 8
      },
      "targets": [
        {
          "expr": "(rate(cart_additions_total[5m]) - rate(orders_total[5m])) / rate(cart_additions_total[5m]) * 100"
        }
      ],
      "thresholds": {
        "steps": [
          {
            "value": 0,
            "color": "green"
          },
          {
            "value": 60,
            "color": "yellow"
          },
          {
            "value": 80,
            "color": "red"
          }
        ]
      }
    },
    {
      "id": 5,
      "title": "Payment Success Rate",
      "type": "gauge",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 8
      },
      "targets": [
        {
          "expr": "(1 - rate(payment_failures_total[5m]) / rate(payment_attempts_total[5m])) * 100"
        }
      ],
      "thresholds": {
        "steps": [
          {
            "value": 0,
            "color": "red"
          },
          {
            "value": 95,
            "color": "yellow"
          },
          {
            "value": 99,
            "color": "green"
          }
        ]
      }
    },
    {
      "id": 6,
      "title": "Active Users",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "expr": "sum(active_users_total)"
        }
      ]
    },
    {
      "id": 7,
      "title": "New Registrations (Today)",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 16
      },
      "targets": [
        {
          "expr": "increase(user_registrations_total[24h])"
        }
      ]
    },
    {
      "id": 8,
      "title": "Average Order Value",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 16
      },
      "targets": [
        {
          "expr": "rate(order_revenue_total[1h]) / rate(orders_total[1h])"
        }
      ],
      "format": "currencyUSD"
    },
    {
      "id": 9,
      "title": "Product Ratings",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 16
      },
      "targets": [
        {
          "expr": "avg(product_rating_average)"
        }
      ],
      "thresholds": {
        "steps": [
          {
            "value": 0,
            "color": "red"
          },
          {
            "value": 3.5,
            "color": "yellow"
          },
          {
            "value": 4.5,
            "color": "green"
          }
        ]
      }
    },
    {
      "id": 10,
      "title": "Top Products by Views",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 20
      },
      "targets": [
        {
          "expr": "topk(10, rate(product_views_total[1h]))",
          "format": "table"
        }
      ]
    },
    {
      "id": 11,
      "title": "Top Products by Revenue",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 20
      },
      "targets": [
        {
          "expr": "topk(10, rate(product_revenue_total[1h]))",
          "format": "table"
        }
      ]
    }
  ]
}
